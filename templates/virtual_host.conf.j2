<VirtualHost 10.166.1.24:8003>
    ServerName confluence.ronnyforberger.de
    DocumentRoot /usr/local/systems/HTTP/docroot

    BrowserMatch ".*MSIE.*" nokeepalive ssl-unclean-shutdown downgrade-1.0 force-response-1.0

    CustomLog /usr/local/systems/HTTP/log/httpd/confluence.ronnyforberger.de_access.log combined
    ErrorLog /usr/local/systems/HTTP/log/httpd/confluence.ronnyforberger.de_error.log

    RewriteEngine on
    ##RewriteLogLevel 0
    #RewriteLog /usr/local/systems/HTTP/log/httpd/confluence.ronnyforberger.de_rewrite.log
    #RewriteCond %{SERVER_PORT} ^80$
    RewriteRule ^.*$ https://%{SERVER_NAME}%{REQUEST_URI} [R,L]
    ErrorDocument 403 http://www.ronnyforberger.de

    AllowEncodedSlashes On

    <Location />
        Order allow,deny
        Allow from all
    </Location>
</VirtualHost>
